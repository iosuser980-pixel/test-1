-- Create ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PositionRecorderGui"
screenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Create Frame for menu
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 200, 0, 100)
frame.Position = UDim2.new(0, 10, 0, 10)
frame.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
frame.Parent = screenGui

-- Create Button to record position
local recordButton = Instance.new("TextButton")
recordButton.Size = UDim2.new(1, -20, 0, 40)
recordButton.Position = UDim2.new(0, 10, 0, 10)
recordButton.Text = "Record Mouse Position"
recordButton.Parent = frame

-- Create Label to display recorded position
local positionLabel = Instance.new("TextLabel")
positionLabel.Size = UDim2.new(1, -20, 0, 40)
positionLabel.Position = UDim2.new(0, 10, 0, 60)
positionLabel.Text = "Position: None"
positionLabel.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
positionLabel.TextColor3 = Color3.new(1, 1, 1)
positionLabel.Parent = frame

local recordedPosition = nil

-- Function to record mouse position
local function recordPosition()
    local player = game.Players.LocalPlayer
    local mouse = player:GetMouse()
    recordedPosition = Vector3.new(mouse.Hit.p.X, mouse.Hit.p.Y, mouse.Hit.p.Z)
    positionLabel.Text = "Position: " .. tostring(recordedPosition)
end

-- Connect button click
recordButton.MouseButton1Click:Connect(recordPosition)
